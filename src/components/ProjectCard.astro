---
interface Props {
  title: string
  description: string
  tags: string[]
  slug: string
  image?: string
  icon?: string
  demo?: string
  demoLabel?: string
  github?: string
}

const { title, description, tags, slug, image, icon, demo, demoLabel, github } = Astro.props
const base = import.meta.env.BASE_URL
const demoText = demoLabel || 'View Demo'
const isImageSvg = Boolean(image?.toLowerCase().endsWith('.svg'))
---

<article class="project-card h-full flex flex-col bg-white dark:bg-gray-900 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden" data-tags={tags.join(',')}>
  {image && (
    <div class="p-6 pb-0 aspect-video overflow-hidden bg-white dark:bg-gray-900 max-h-[200px]">
      <img
        src={image}
        alt={title}
        class:list={{
          'w-full h-full object-contain object-left transition-transform duration-300': true,
          'dark:invert dark:brightness-85 dark:opacity-80': isImageSvg
        }}
      />
    </div>
  )}
  <div class="p-6 flex-1 flex flex-col">
    <h3 class="text-xl md:text-2xl mb-2 text-gray-900 dark:text-gray-100">
      <a href={`/tda/projects/${slug}`} class="inline-flex items-center gap-3 hover:text-link-hover dark:hover:text-primary-400 transition-colors">
        {!image && icon && (
          <span
            class="w-7 h-7 text-primary-500 dark:text-primary-400 [&>svg]:w-full [&>svg]:h-full [&>svg]:stroke-[2]"
            set:html={icon}
            aria-hidden="true"
          />
        )}
        {title}
      </a>
    </h3>
    <p class="text-gray-600 dark:text-gray-400 mb-4">{description}</p>
    
    <div class="flex flex-wrap gap-2 mb-6">
      {tags.map((tag) => (
        <span class="px-3 py-1 text-sm bg-primary-100 dark:bg-primary-700/30 text-primary-700 dark:text-primary-300 rounded-full">
          {tag}
        </span>
      ))}
    </div>

    <div class="mt-auto flex flex-wrap justify-between gap-3">
      <a
        href={`/tda/projects/${slug}`}
        class="inline-flex items-center text-link dark:text-primary-400 hover:text-link-hover dark:hover:text-primary-300 font-medium transition-colors"
      >
        Learn More
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
      {demo && (
        <a
          href={demo.startsWith('http') ? demo : base + demo}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-link-hover dark:hover:text-primary-400 transition-colors"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          {demoText}
        </a>
      )}
      {github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-link-hover dark:hover:text-primary-400 transition-colors"
        >
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      )}
    </div>
  </div>
</article>
