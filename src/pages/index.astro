---
import { getCollection } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import ProjectCard from '../components/ProjectCard.astro'
import SkillsList from '../components/SkillsList.astro'

const allProjects = await getCollection('projects')
const sortedProjects = allProjects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
---

<BaseLayout title="Antonina Serdyukova | Full Stack Software Engineer">
  <Header />
  
  <main class="pt-[73px]">
    <!-- Hero Section -->
    <section id="intro" class="min-h-[70vh] flex items-center bg-gradient-to-br from-primary-100 to-accent-100 dark:from-primary-900/60 dark:to-accent-900/60">
      <div class="container mx-auto px-4 py-20">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl lg:text-7xl mb-6 text-gray-900 dark:text-gray-100">
            Hi, I'm Antonina
          </h1>
          <p class="text-2xl/10 md:text-3xl/12 text-gray-700 dark:text-gray-300 mb-8">
            Full-stack software engineer building product-driven web experiences through elegant architecture and thoughtful UX.
          </p>
          <a
            href="#skills"
            class="btn-primary inline-block px-8 py-3 bg-primary-500 hover:bg-primary-400 font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-300"
          >
            View My Skills
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="pt-20 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl md:text-5xl text-center mb-12 text-gray-900 dark:text-gray-100">About Me</h2>
        <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-10 items-center">
          <div class="flex justify-center">
            <img
              src="/img/antonina.jpg"
              alt="Antonina Serdyukova"
              class="rounded-lg shadow-lg object-cover"
            />
          </div>
          <div class="md:col-span-2 space-y-4 text-gray-700 dark:text-gray-300">
            <p>
              I’m a full-stack software engineer with 5+ years of professional experience building and scaling product-driven web applications in agency and technology environments before founding my own product.
            </p>
            <p>
              My background spans user-facing products, content and commerce systems, APIs, and internal tooling, translating product requirements into reliable, maintainable architecture. I’ve worked closely with design, marketing, and business partners to ship production-ready solutions.
            </p>
            <p>
              In recent years, I’ve been the Co-Founder and Technical Lead of Taksu Boards, where I own the full product lifecycle — from UX and system architecture to analytics and iteration — building a custom Next.js + Strapi platform using modern web stacks and AI-assisted development tools.
            </p>
            <p>
              I hold a B.S. in Computer Science and Information Security (Summa Cum Laude) and enjoy working with thoughtful, distributed teams building meaningful, well-designed products. 
            </p>
            <p>
              Currently in Bali, Indonesia, I’m open to remote-first roles and international opportunities, authorized to work in the United States, and open to relocation or visa sponsorship where applicable.
            </p>
          </div>
        </div>
      </div>
      <a
      href="/img/antonina-serdyukova-resume-2026.pdf"
          target="_blank"
          rel="noopener noreferrer"
        class="mt-20 btn-primary resume-cta block w-full text-center bg-primary-500 hover:bg-primary-400 transition-colors shadow-md hover:shadow-lg"
          aria-label="Open resume PDF in a new tab"
        >
          <div class="px-6 py-6 inline-flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="text-lg font-semibold">See Full Resume</span>
          </div>
      </a>
    </section>

    <!-- What I Do Section -->
    <section id="what" class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl md:text-5xl text-center mb-12 text-gray-900 dark:text-gray-100">What I Do</h2>
        <div class="max-w-6xl mx-auto grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6">
            <div class="text-primary-600 dark:text-primary-400 mb-4">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl mb-2 text-gray-900 dark:text-gray-100">Full-Stack Engineering</h3>
            <p class="text-gray-600 dark:text-gray-400">
              I build scalable, end-to-end web platforms, owning everything from APIs and data models to frontend architecture and deployment.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6">
            <div class="text-primary-600 dark:text-primary-400 mb-4">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl mb-2 text-gray-900 dark:text-gray-100">Product-Driven Development</h3>
            <p class="text-gray-600 dark:text-gray-400">
              I work closely with product goals, translating ideas into usable systems and shipping features that balance business needs, usability, and technical quality.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6">
            <div class="text-primary-600 dark:text-primary-400 mb-4">
              <svg fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-12 h-12">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 0 1-.657.643 48.39 48.39 0 0 1-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 0 1-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 0 0-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 0 1-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 0 0 .657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 0 1-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 0 0 5.427-.63 48.05 48.05 0 0 0 .582-4.717.532.532 0 0 0-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.96.401v0a.656.656 0 0 0 .658-.663 48.422 48.422 0 0 0-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 0 1-.61-.58v0Z" />
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl mb-2 text-gray-900 dark:text-gray-100">Technical Architecture</h3>
            <p class="text-gray-600 dark:text-gray-400">
              I focus on clean, maintainable architecture — designing systems that scale well, are easy to reason about, and support long-term product growth.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6">
            <div class="text-primary-600 dark:text-primary-400 mb-4">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl mb-2 text-gray-900 dark:text-gray-100">Product Creation</h3>
            <p class="text-gray-600 dark:text-gray-400">
              I build and ship product-driven platforms, helping take ideas from early definition through launch and iteration in collaborative teams.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6">
            <div class="text-primary-600 dark:text-primary-400 mb-4">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl mb-2 text-gray-900 dark:text-gray-100">UX & Design Collaboration</h3>
            <p class="text-gray-600 dark:text-gray-400">
              I care deeply about user experience, working across design and engineering to create interfaces that are intuitive, consistent, and purposeful.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6">
            <div class="text-primary-600 dark:text-primary-400 mb-4">
              <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z" />
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl mb-2 text-gray-900 dark:text-gray-100">AI-Assisted Development</h3>
            <p class="text-gray-600 dark:text-gray-400">
              I use AI-assisted development tools to accelerate iteration, improve code quality, and stay focused on solving meaningful product problems.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="py-20 bg-gradient-to-br from-accent-100 to-primary-100 dark:from-accent-900/60 dark:to-primary-900/60">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl md:text-5xl text-center mb-12 text-gray-900 dark:text-gray-100">My Skills</h2>
        <div class="max-w-6xl mx-auto">
          <SkillsList />
        </div>
      </div>
    </section>
    <section class="bg-gradient-to-br from-accent-50 to-primary-50 dark:from-gray-900 dark:to-gray-800">
      <a
        href="/img/antonina-serdyukova-resume-2026.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary resume-cta block w-full text-center bg-primary-500 hover:bg-primary-400 transition-colors shadow-md hover:shadow-lg"
        aria-label="Open resume PDF in a new tab"
      >
        <div class="px-6 py-6 inline-flex items-center justify-center space-x-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span class="text-lg font-semibold">See Full Resume</span>
        </div>
      </a>
    </section>
    
    <!-- Projects Section -->
    <section id="projects" class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="container mx-auto px-4">
        
        <h2 class="text-4xl md:text-5xl text-center mb-8 text-gray-900 dark:text-gray-100">Projects</h2>
        
        <!-- Tag Filter -->
        <div id="tag-filter" class="max-w-4xl mx-auto mb-8">
          <div class="flex flex-wrap gap-2 justify-center">
            <button
              class="tag-btn px-4 py-2 rounded-full bg-primary-500 text-white font-medium transition-all duration-300"
              data-tag="all"
            >
              All Projects
            </button>
          </div>
        </div>

        <div id="projects-grid" class="max-w-6xl mx-auto grid md:grid-cols-2 gap-8">
          {sortedProjects.map((project) => (
            <ProjectCard
              title={project.data.title}
              description={project.data.description}
              tags={project.data.tags}
              slug={project.slug}
              image={project.data.image}
              icon={project.data.icon}
              demo={project.data.demo}
              demoLabel={project.data.demoLabel}
              github={project.data.github}
              cardClass="dark:bg-gray-900"
            />
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Tag filtering functionality
  const projectCards = document.querySelectorAll('.project-card')
  const tagFilter = document.getElementById('tag-filter')
  
  // Collect tag counts
  const tagCounts = new Map()
  projectCards.forEach(card => {
    const tags = card.getAttribute('data-tags')?.split(',') || []
    tags.forEach(rawTag => {
      const tag = rawTag.trim()
      if (!tag) {
        return
      }
      tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1)
    })
  })

  // Create tag buttons ordered by most used
  const tagButtons = Array.from(tagCounts.entries())
    .sort((a, b) => {
      if (b[1] !== a[1]) {
        return b[1] - a[1]
      }
      return a[0].localeCompare(b[0])
    })
    .map(([tag]) => tag)
  tagButtons.forEach(tag => {
    const btn = document.createElement('button')
    btn.className = 'tag-btn px-4 py-2 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-link-hover hover:text-white font-medium transition-all duration-300'
    btn.setAttribute('data-tag', tag as string)
    btn.textContent = tag as string
    tagFilter?.querySelector('div')?.appendChild(btn)
  })

  // Filter functionality
  const filterBtns = document.querySelectorAll('.tag-btn')
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const selectedTag = btn.getAttribute('data-tag')
      
      // Update active button
      filterBtns.forEach(b => {
        if (b === btn) {
          b.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300')
          b.classList.add('bg-primary-500', 'text-white')
        } else {
          b.classList.remove('bg-primary-500', 'text-white')
          b.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300')
        }
      })

      // Filter projects
      projectCards.forEach(card => {
        const cardTags = card.getAttribute('data-tags')?.split(',') || []
        const htmlCard = card as HTMLElement
        if (selectedTag === 'all' || cardTags.some(tag => tag.trim() === selectedTag)) {
          htmlCard.style.display = 'block'
          htmlCard.classList.add('animate-fadeIn')
        } else {
          htmlCard.style.display = 'none'
        }
      })
    })
  })
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-in-out;
  }
</style>
