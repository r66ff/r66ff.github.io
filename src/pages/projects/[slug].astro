---
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'
import Header from '../../components/Header.astro'
import ProjectCard from '../../components/ProjectCard.astro'
import Footer from '../../components/Footer.astro'

const base = import.meta.env.BASE_URL

export async function getStaticPaths() {
  const projects = await getCollection('projects')
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project }
  }))
}

interface Props {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props
const { Content } = await project.render()
const demoLabel = project.data.demoLabel || 'View Demo'
const bannerSrc = project.data.banner || project.data.image
const isBannerSvg = Boolean(bannerSrc?.toLowerCase().endsWith('.svg'))

// Get related projects based on shared tags
const allProjects = await getCollection('projects')
const relatedProjects = allProjects
  .filter(p => p.slug !== project.slug)
  .filter(p => p.data.tags.some(tag => project.data.tags.includes(tag)))
  .slice(0, 3)
---

<BaseLayout title={`${project.data.title} | Antonina Serdyukova`} description={project.data.description}>
  <Header />
  
  <main class="pt-[73px]">
    <!-- Project header with banner background -->
    <header
      class:list={{
        'relative rounded-2xl overflow-hidden mx-4 md:mx-8 lg:mx-20': true,
        'min-h-[500px]': Boolean(bannerSrc)
      }}
    >
      {bannerSrc && (
        <div
          class:list={{
            'absolute inset-0 bg-center bg-contain bg-no-repeat': true,
            'dark:invert dark:brightness-125': isBannerSvg
          }}
          style={`background-image: url('${bannerSrc}');`}
        ></div>
      )}
      <div class="absolute inset-0 bg-white/70 dark:bg-gray-900/70"></div>
      <div
        class:list={{
          'relative max-w-4xl mx-auto py-10 flex flex-col justify-center': true,
          'min-h-[500px]': Boolean(bannerSrc)
        }}
      >
        <!-- Back button -->
        <a
          href="/#projects"
          class="inline-flex items-center text-link dark:text-primary-400 hover:text-link-hover dark:hover:text-primary-300 mb-8 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Projects
        </a>
        <h1 class="text-5xl md:text-6xl lg:text-7xl mb-6 text-gray-900 dark:text-gray-100">
          {project.data.title}
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-6">
          {project.data.description}
        </p>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-6">
          {project.data.tags.map((tag) => (
            <span class="px-3 py-1 text-sm bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full">
              {tag}
            </span>
          ))}
        </div>

        <!-- Project links -->
        <div class="pt-2 flex flex-wrap gap-4">
          {project.data.demo && (
            <a
              href={project.data.demo.startsWith('http') ? project.data.demo : base + project.data.demo}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary inline-flex items-center px-6 py-3 bg-primary-500 hover:bg-primary-400 font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-300"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              {demoLabel}
            </a>
          )}
          {project.data.video && (
            <a
              href={project.data.video}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-6 py-3 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-900 dark:text-gray-100 font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-300"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Watch Video
            </a>
          )}
          {project.data.github && (
            <a
              href={project.data.github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-6 py-3 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-900 dark:text-gray-100 font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-300"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View on GitHub
            </a>
          )}
        </div>
      </div>
    </header>
    <article class="pb-20 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          {project.data.carousel && project.data.carousel.length > 0 && (
            <section class="mb-12 mt-6" aria-label="Project screenshots" data-carousel>
              <div class="relative">
                <div class="overflow-hidden rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
                  {project.data.carousel.map((item, idx) => (
                    <figure
                      class:list={{
                        'carousel-slide': true,
                        hidden: idx !== 0
                      }}
                      data-index={idx}
                    >
                      <img
                        src={item.image}
                        alt={item.caption ? item.caption : `${project.data.title} screenshot ${idx + 1}`}
                        class="w-full h-auto"
                      />
                      {item.caption && (
                        <figcaption class="px-6 py-4 text-sm bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-100">
                          {item.caption}
                        </figcaption>
                      )}
                    </figure>
                  ))}
                </div>

                <div class="mt-4 flex items-center justify-between">
                  <button
                    type="button"
                    class="inline-flex items-center gap-2 px-3 py-2 text-sm text-gray-700 dark:text-gray-200 hover:text-link-hover dark:hover:text-primary-300 transition-colors"
                    data-carousel-prev
                    aria-label="Previous slide"
                  >
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
                    </svg>
                    Previous
                  </button>
                  <div class="text-sm text-gray-500 dark:text-gray-400" data-carousel-status>
                    1 / {project.data.carousel.length}
                  </div>
                  <button
                    type="button"
                    class="inline-flex items-center gap-2 px-3 py-2 text-sm text-gray-700 dark:text-gray-200 hover:text-link-hover dark:hover:text-primary-300 transition-colors"
                    data-carousel-next
                    aria-label="Next slide"
                  >
                    Next
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                    </svg>
                  </button>
                </div>
              </div>
            </section>
          )}

          <!-- Project content -->
          <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
            <Content />
          </div>
        </div>

        <!-- Related projects -->
        {relatedProjects.length > 0 && (
          <div class="max-w-6xl mx-auto mt-20 pt-12 border-t border-gray-200 dark:border-gray-700">
            <h2 class="text-4xl md:text-5xl mb-8 text-gray-900 dark:text-gray-100">Related Projects</h2>
            <div class="grid md:grid-cols-3 gap-8">
              {relatedProjects.map((related) => (
                <ProjectCard
                  title={related.data.title}
                  description={related.data.description}
                  tags={related.data.tags}
                  slug={related.slug}
                  image={related.data.image}
                  icon={related.data.icon}
                  demo={related.data.demo}
                  demoLabel={related.data.demoLabel}
                  github={related.data.github}
                />
              ))}
            </div>
          </div>
        )}
      </div>
    </article>
  </main>

  <Footer />
</BaseLayout>

<script>
  const carousels = document.querySelectorAll('[data-carousel]')

  carousels.forEach((carousel) => {
    const slides = carousel.querySelectorAll('.carousel-slide')
    const prevButton = carousel.querySelector('[data-carousel-prev]')
    const nextButton = carousel.querySelector('[data-carousel-next]')
    const status = carousel.querySelector('[data-carousel-status]')

    if (!slides.length || !prevButton || !nextButton || !status) {
      return
    }

    let currentIndex = 0

    const update = () => {
      slides.forEach((slide, index) => {
        slide.classList.toggle('hidden', index !== currentIndex)
      })
      status.textContent = `${currentIndex + 1} / ${slides.length}`
    }

    prevButton.addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length
      update()
    })

    nextButton.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % slides.length
      update()
    })

    update()
  })
</script>

<style>
  .prose :global(a) {
    @apply text-link dark:text-primary-400 hover:text-link-hover dark:hover:text-primary-300 hover:underline;
  }
  
  .prose :global(h2) {
    @apply text-3xl mt-8 mb-4 text-gray-900 dark:text-gray-100;
  }
  
  .prose :global(h3) {
    @apply text-2xl mt-6 mb-3 text-gray-900 dark:text-gray-100;
  }
  
  .prose :global(h4) {
    @apply text-xl mt-4 mb-2 text-gray-900 dark:text-gray-100;
  }
  
  .prose :global(p) {
    @apply text-gray-700 dark:text-gray-300 mb-4 leading-relaxed;
  }
  
  .prose :global(ul), .prose :global(ol) {
    @apply text-gray-700 dark:text-gray-300 mb-4 pl-6;
  }

  .prose :global(ol) {
    list-style-type: decimal;
  }

  .prose :global(ul) {
    list-style-type: disc;
  }
  
  .prose :global(li) {
    @apply mb-2;
  }
  
  .prose :global(code) {
    @apply bg-gray-100 dark:bg-gray-800 text-primary-500 dark:text-primary-400 px-2 py-1 rounded text-sm;
  }
  
  .prose :global(pre) {
    @apply bg-gray-100 dark:bg-gray-800 p-4 rounded-lg overflow-x-auto mb-4;
  }
  
  .prose :global(blockquote) {
    @apply border-l-4 border-primary-500 dark:border-primary-400 pl-4 italic text-gray-700 dark:text-gray-300;
  }
  
  .prose :global(img) {
    @apply rounded-lg shadow-md;
  }
</style>
